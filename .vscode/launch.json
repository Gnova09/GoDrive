{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Iniciar proyecto",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "start"
        ],
        "env": {
          "NODE_ENV": "development"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },

      {
        "type": "node",
        "request": "launch",
        "name": "Instalar paquetes",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "i"
        ],
        "env": {
          "NODE_ENV": "development"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }